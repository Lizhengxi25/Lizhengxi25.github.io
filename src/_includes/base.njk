{# Base Layout Template - Nunjucks Template Engine #}
{# This template provides the HTML structure for all pages #}
{# Other templates extend this base layout #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Dynamic title: Use page title if provided, otherwise default #}
    <title>{{ title or "My Personal Website" }}</title>

    <!-- Prism CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/toolbar/prism-toolbar.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@400;500;600;700&display=swap" rel="stylesheet">

    {# Link to compiled Tailwind CSS #}
    {# This CSS is generated by PostCSS from src/css/main.css #}
    <link rel="stylesheet" href="/css/main.css">

    {# Additional head content can be injected here #}
    {# MathJax is now handled by eleventy-plugin-mathjax #}
    {% if head %}{{ head | safe }}{% endif %}

</head>
<body>
    <div class="site-wrapper">
        <div class="site-container">
            <nav class="navigation">
                <a href="/">Home</a>
                <a href="/projects/">Projects</a>
                <a href="/blog/">Blog</a>
                <a href="/readings/">Readings</a>
                <a href="/contact/">Contact</a>
            </nav>
            
            {# Main content area with Tailwind classes #}
            {# container: max-width with responsive breakpoints #}
            {# mx-auto: center horizontally #}
            {# px-4: horizontal padding #}
            {# py-8: vertical padding #}
            <main>
                {# Inject page content here #}
                {# | safe filter prevents HTML escaping #}
                {{ content | safe }}
            </main>
        </div>
    </div>

    <!-- Prism Core -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-core.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>
    
    <!-- Prism Plugins -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/toolbar/prism-toolbar.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/copy-to-clipboard/prism-copy-to-clipboard.min.js"></script>
    
    <!-- Configure autoloader -->
    <script>
        Prism.plugins.autoloader.languages_path = 'https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/';
    </script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add line-numbers class first
            document.querySelectorAll('pre code[class*="language-"]').forEach(function(code) {
                const pre = code.parentElement;
                pre.classList.add('line-numbers');
            });
            
            // Wait a bit for Prism to finish highlighting
            setTimeout(function() {
                // Force re-run line numbers plugin
                if (window.Prism && window.Prism.plugins && window.Prism.plugins.lineNumbers) {
                    document.querySelectorAll('pre.line-numbers').forEach(function(pre) {
                        window.Prism.plugins.lineNumbers.resize(pre);
                    });
                }
            }, 100);
        });
    </script>

    {# Footer scripts can be added here #}
    {% if scripts %}{{ scripts | safe }}{% endif %}
</body>
</html>