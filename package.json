    "email": "zhengxili1216@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/postcss": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "eleventy-plugin-mathjax": "^2.0.4",
    "markdown-it": "^14.1.0"
  }
