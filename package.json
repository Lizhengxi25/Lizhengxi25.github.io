{
  "name": "theme",
  "version": "1.0.0",
  "description": "Personal website theme using Eleventy and Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build:css && eleventy --serve",
    "build": "npm run build:css && eleventy",
    "build:css": "postcss src/css/main.css -o _site/css/main.css",
    "watch:css": "postcss src/css/main.css -o _site/css/main.css --watch"
  },
  "keywords": [
    "eleventy",
    "tailwind",
    "academic"
  ],
  "author": {
